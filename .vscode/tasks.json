{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Debug X86",
        "type": "shell",
        "command": "cl.exe",
        "args": [
          "/EHsc",
          "/GR-",
          "/DDEBUG",
          "/D_DEBUG",
          "/DUNICODE",
          "/DWIN32_LEAN_AND_MEAN",
          "/DWIN32",
          "/D_CRT_SECURE_NO_WARNINGS",
          "/DVK_USE_PLATFORM_WIN32_KHR",
          "/I${env:VULKAN_SDK}/Include",
          "/I${workspaceFolder}/src",
          "/I${workspaceFolder}/src/external/stb",
          "/MDd",
          "/W3",
          "/Z7",
          "/MP",
          "src/common_graphics.cpp",
          "src/compute.cpp",
          "src/game.cpp",
          "src/graphics.cpp",
          "src/log.cpp",
          "src/main.cpp",
          "src/scene_graphics.cpp",
          "src/scene.cpp",
          "src/types.cpp",
          "src/utils.cpp",
          "src/vk_objects.cpp",
          "src/vk_utils.cpp",
          "src/vulkan_interface.cpp",
          "Shlwapi.lib",
          "kernel32.lib",
          "user32.lib",
          "gdi32.lib",
          "winspool.lib",
          "shell32.lib",
          "ole32.lib",
          "oleaut32.lib",
          "uuid.lib",
          "comdlg32.lib",
          "advapi32.lib",
          "vulkan-1.lib",
          "/Fo${workspaceFolder}/build32/vscode/debug/",
          "/Fe${workspaceFolder}/build32/vscode/debug/Asteroids.exe",
          "/link",
          "/LIBPATH:${env:VULKAN_SDK}/Lib32",
          "/DEBUG:FASTLINK",
          "/MACHINE:X86",
          "/SUBSYSTEM:WINDOWS",
          "/incremental"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "presentation": {
          "reveal": "always"
        },
        "problemMatcher": "$msCompile"
      },
      {
        "label": "Release X86",
        "type": "shell",
        "command": "cl.exe",
        "args": [
          "/EHsc",
          "/GR-",
          "/DNDEBUG",
